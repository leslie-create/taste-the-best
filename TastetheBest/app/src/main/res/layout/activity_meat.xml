<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Meat">

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/adobobtn"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/meat_btn_design"
        android:text="ADOBO"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sinigangbtn"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/meat_btn_design2"
        android:text="SINIGANG"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adobobtn" />

    <Button
        android:id="@+id/beefsteakbtn"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/meat_btn_design3"
        android:text="Beef Steak"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sinigangbtn" />

    <Button
        android:id="@+id/karekarebtn"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/meat_btn_design4"
        android:text="Kare Kare"
        android:textColor="#808080"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beefsteakbtn" />

    <Button
        android:id="@+id/calderetabtn"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/meat_btn_design5"
        android:text="Caldereta"
        android:textColor="#808080"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/karekarebtn" />

</androidx.constraintlayout.widget.ConstraintLayout>